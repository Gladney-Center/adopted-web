{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/robots.txt",
        "function": "createRobots"
      },
      {
        "source": "/sitemap.xml",
        "function": "createSitemap"
      },
      {
        "source": "**/**",
        "function": "next"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "functions"
  }
}
